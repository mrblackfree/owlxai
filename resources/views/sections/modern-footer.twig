{# Modern Footer #}
<footer class="mt-auto">
	<div class="border-t border-white/5">
		<div class="container mx-auto px-4 py-8">
			<div class="grid md:grid-cols-4 gap-8">
				{# Brand Section #}
				<div class="md:col-span-2">
					<div class="flex items-center gap-3 mb-4">
						<img src="{{ option.brand.logo_dark ?? '/assets/logo-light.svg' }}" 
							 alt="{{ option.site.name ?? 'Logo' }}" 
							 class="hidden dark:block h-8 object-contain">
						<img src="{{ option.brand.logo ?? '/assets/logo-dark.svg' }}" 
							 alt="{{ option.site.name ?? 'Logo' }}" 
							 class="block dark:hidden h-8 object-contain">
					</div>
					<p class="text-sm text-content-dimmed mb-4 max-w-md">
						{{ __('Empowering creativity with AI. Create amazing content, images, and more with our advanced AI tools.') }}
					</p>
					
					{# Social Links #}
					<div class="flex gap-2">
						{% set social_links = [
							{ icon: 'ti-brand-twitter', url: '#', label: 'Twitter' },
							{ icon: 'ti-brand-facebook', url: '#', label: 'Facebook' },
							{ icon: 'ti-brand-instagram', url: '#', label: 'Instagram' },
							{ icon: 'ti-brand-linkedin', url: '#', label: 'LinkedIn' }
						] %}
						
						{% for link in social_links %}
							<a href="{{ link.url }}" 
							   class="w-10 h-10 rounded-lg bg-white/5 hover:bg-white/10 flex items-center justify-center transition-colors"
							   aria-label="{{ link.label }}">
								<i class="ti {{ link.icon }}"></i>
							</a>
						{% endfor %}
					</div>
				</div>

				{# Quick Links #}
				<div>
					<h3 class="font-semibold mb-4">{{ __('Quick Links') }}</h3>
					<ul class="space-y-2">
						<li>
							<a href="app" class="text-sm text-content-dimmed hover:text-content transition-colors">
								{{ __('Dashboard') }}
							</a>
						</li>
						<li>
							<a href="app/writer" class="text-sm text-content-dimmed hover:text-content transition-colors">
								{{ __('AI Writer') }}
							</a>
						</li>
						<li>
							<a href="app/imagine" class="text-sm text-content-dimmed hover:text-content transition-colors">
